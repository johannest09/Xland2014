@model IEnumerable<Xland.ViewModels.ProjectIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Breyta", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Skoða", "Details", new { id = item.ID }) |
            @Html.ActionLink("Eyða", "Delete", new { id = item.ID }) |
            @Html.ActionLink("Myndir", "ProjectImages", new { id = item.ID })
        </td>

    </tr>
}

</table>
