                                <dd>{{Project.AreaSize}}</dd>
                            {{/Project.AreaSize.length}}
                            {{#Project.ProjectLocation.length}}
                                <dt>@Resources.Resources.ProjectLocation</dt>
                                <dd>{{Project.ProjectLocation}}</dd>
                            {{/Project.ProjectLocation.length}}
                            {{#Project.Locality.length}}
