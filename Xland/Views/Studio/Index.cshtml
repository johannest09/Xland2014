@model IEnumerable<Xland.Models.Studio>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h2>Stofur</h2>

@Html.ActionLink("Bæta við stofu", "Create", null, new { @class="btn btn-primary btn-lg btn-create" })

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Website)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Breyta", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Skoða", "Details", new { id=item.ID }) |
                @Html.ActionLink("Eyða", "Delete", new { id=item.ID })
            </td>
        </tr>
    }

    </table>
</div>

